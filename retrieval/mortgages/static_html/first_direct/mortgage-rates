            $(function () {
                $('#sectionNavigation li a').each(function () {
                   $this = $(this);
                    $this.removeClass('dbl');
                    if ($this.height() > 35) {
                        $this.addClass('dbl');
                    }
                });

                if(document.cookie.indexOf("noMobile=true") > -1 && $('#mobileViewLink:visible').length > 0){
                    setTimeout(function() {
                        window.oHash = location.hash;
                        location.hash = 'deskTopView';
                        $(window).bind('hashchange',function(e){
                            if(String(location.hash) == String(window.oHash)){
                                document.cookie="noMobile=false;path=/";
                                top.location.href = document.referrer;
                            }
                        });
                    }, 500);
                }
            })
